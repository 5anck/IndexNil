local whitelist = {
    "HelloJesus009",
    -- Agrega más nombres de usuario según sea necesario
}

local function isUserInWhitelist(username)
    for _, name in ipairs(whitelist) do
        if name == username then
            return true
        end
    end
    return false
end

local function checkAndKickPlayer(player)
    local username = player.Name
    if not isUserInWhitelist(username) then
        player:Kick("¡No estás en la lista blanca!")
    end
end

local function main()
    local players = game:GetService("Players"):GetPlayers()
    for _, player in ipairs(players) do
        checkAndKickPlayer(player)
    end
end

local updateTime = 60 -- Intervalo de actualización en segundos

while true do
    main()
    wait(updateTime)
end
print("actualizado")
